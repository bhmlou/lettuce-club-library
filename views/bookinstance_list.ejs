<!DOCTYPE html>
<html lang="en">
<head>
  <%- include partials/head %>
</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  <div class="container">
    <%- include partials/header %>
    <div class="row" style="margin-top: 5%">
      <div class="three columns">
        <%- include partials/sidebar-nav %>
      </div>
      <div class="nine columns">
          <h5>Books:</h5>
          <ul class="list-display">
            <% bookinstance_list.forEach(function(val){ %>
              <li>
                <a href="<%= val.url %>"><%= val.book.title %></a>: <%= val.imprint %> -
                <% if (val.status == 'Available') { %>
                  <span class="success"><%= val.status %></span>
                <% } else if (val.status == 'Maintenance') { %>
                  <span class="warning"><%= val.status %></span> - (Due: <%= val.due_back_formatted %>)
                <% } else if (val.status == "Loaned") { %>
                  <span class="danger"><%= val.status %></span> - (Due: <%= val.due_back_formatted %>)
                <% } %>
              </li>
            <% }); %>
          </ul>
      </div>
    </div>
  </div>
  <%- include partials/footer %>

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
